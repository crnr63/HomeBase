@model IEnumerable<HomeBase.Models.DZQOTDModelView>

@{
    ViewData["Title"]= "Member Zone";
    Layout = "~/Views/Shared/_MemberZoneLayout.cshtml";

}

<h2> QOTD</h2>
<h4>QOTD</h4>

@foreach (var item in Model) {
   <div class="panel-group" id="accordionMessagesSetup">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title"></h4>

        <table class="table">
          <thead>
            <tr>
              <th>@Html.DisplayNameFor(model => model.QOTD.Question)</th>

              <th>@Html.DisplayNameFor(model => model.QOTD.QuestionAuthor)</th>

              <th>@Html.DisplayNameFor(model => model.QOTD.QuestionDate)</th>

              <th>@Html.DisplayNameFor(model => model.QOTD.Theme)</th>

              <th>Extras</th>

              <th></th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td><a class="accordion-toggle" data-toggle="collapse" data-parent=
              "#accordionMessagesSetup" href=@string.Format("#collapseMessagesSetup{0}",item.QOTD.ID)>
             <span class="glyphicon glyphicon-chevron-down"></span>
              @Html.DisplayFor(modelItem
              => item.QOTD.Question)</a></td>

              <td>@Html.DisplayFor(modelItem => item.QOTD.QuestionAuthor)</td>

              <td>@Html.DisplayFor(modelItem => item.QOTD.QuestionDate)</td>

              <td>@Html.DisplayFor(modelItem => item.QOTD.Theme)</td>

              <td><a asp-action="Details" asp-route-id=@item.QOTD.ID>Details</a></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div id=@string.Format("collapseMessagesSetup{0}",item.QOTD.ID) class=
      "panel-collapse collapse">
        <div>
          <table class="table">
          <thead>
            <tr>
              <th>Author</th>

              <th>QuestionDate</th>

              <th>Answer</th>

          
              <th></th>
            </tr>
          </thead>
          @foreach (var answer in item.QOTDAnswers){
      <tbody>
            <tr>
           

              <td>@Html.DisplayFor(modelItem => answer.Author)</td>

              <td>@Html.DisplayFor(modelItem => answer.QuestionDate)</td>

              <td>@Html.DisplayFor(modelItem => answer.Answer)</td>

              <td><a asp-action="Details" asp-route-id=@item.QOTD.ID>Details</a></td>
            </tr>
          </tbody>
       
          }
 </table>
         
         
        </div>
      </div>
    </div>
  </div>
}

 