@model HomeBase.Models.QOTDAnswerViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>QOTDAnswer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionID" />

            <div class="form-group">
                <label asp-for="Question" class="control-label"></label>
                <input readonly asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Authors" class="control-label"></label>
                <select asp-for="Authors"  data-val="true" asp-items="Model.Authors">

                </select>
                <span asp-validation-for="Authors" class="text-danger"></span>
            </div>
           
          
            <div class="form-group">
                <label asp-for="QuestionDate" class="control-label"></label>
                <input readonly asp-for="QuestionDate" class="form-control" />
                <span asp-validation-for="QuestionDate" class="text-danger"></span>
            </div>
 
          
            <div class="form-group">
                <label asp-for="Answer" class="control-label"></label>
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
